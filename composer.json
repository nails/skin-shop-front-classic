{
    "name": "nailsapp/skin-shop-front-classic",
    "keywords": ["Nails", "Shop Module", "Front of House Skin", "Twitter Bootstrap", "Bootstrap"],
    "homepage": "http://nailsapp.co.uk/shop/skin/front/classic",
    "description": "The Classic \"Front of House\" skin for the Nails Shop module",
    "license": "MIT",
    "authors":
    [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support":
    {
        "email": "hello@nailsapp.co.uk"
    },
    "require":
    {
    },
    "extra":
    {
        "nails" :
        {
            "name": "Classic Front of House Skin",
            "type": "skin",
            "forModule": "nailsapp/module-shop",
            "subType": "front",
            "data": {
                "assets": [
                    "bower_components/social-likes/social-likes_classic.css",
                    "css/styles.css",
                    "bower_components/jquery-zoom/jquery.zoom.min.js",
                    "bower_components/social-likes/social-likes.min.js",
                    "js/shop.min.js"
                ],
                "js_inline": [
                    "var _nails_skin_shop_front_classic = new _nails_skin_shop_front_classic();"
                ],
                "settings": [
                    {
                        "legend": "Browsing Behaviour",
                        "fields": [
                            {
                                "key": "hide_empty_categories",
                                "label": "Hide Empty Categories",
                                "tip": "Hides any categories which do not contain products.",
                                "type": "boolean"
                            },
                            {
                                "key": "hide_empty_brands",
                                "label": "Hide Empty Brands",
                                "tip": "Hides any brands which do not contain products.",
                                "type": "boolean"
                            },
                            {
                                "key": "hide_empty_collections",
                                "label": "Hide Empty Collections",
                                "tip": "Hides any collections which do not contain products.",
                                "type": "boolean"
                            },
                            {
                                "key": "hide_empty_ranges",
                                "label": "Hide Empty Ranges",
                                "tip": "Hides any ranges which do not contain products.",
                                "type": "boolean"
                            },
                            {
                                "key": "hide_empty_sales",
                                "label": "Hide Empty Sales",
                                "tip": "Hides any sales which do not contain products.",
                                "type": "boolean"
                            },
                            {
                                "key": "hide_empty_tags",
                                "label": "Hide Empty Tags",
                                "tip": "Hides any tags which do not contain products.",
                                "type": "boolean"
                            },
                            {
                                "key": "hide_sidebar_basket_btn",
                                "label": "Hide Sidebar Basket",
                                "tip": "Hides the button in the sidebar for showing the basket total.",
                                "type": "boolean"
                            }
                        ]
                    },
                    {
                        "legend": "Product Listings",
                        "fields": [
                            {
                                "key": "omit_variant_tax_pricing",
                                "label": "Omit Variant Tax Detail",
                                "tip": "Hides the small text beneath a variant's price which shows the price excluding/including tax.",
                                "type": "boolean"
                            },
                            {
                                "key": "browse_product_ribbon_mode",
                                "label": "Product Ribbon Mode",
                                "tip": "When multiple variations are available a ribbon is displayed; choose the style.",
                                "type": "dropdown",
                                "options": {
                                    "horizontal": "Horizontal",
                                    "corner": "Corner"
                                }
                            }
                        ]
                    },
                    {
                        "legend": "Social &amp; Sharing",
                        "fields": [
                            {
                                "key": "social_facebook_enabled",
                                "label": "Enable Facebook",
                                "type": "boolean"
                            },
                            {
                                "key": "social_twitter_enabled",
                                "label": "Enable Twitter",
                                "type": "boolean"
                            },
                            {
                                "key": "social_twitter_via",
                                "label": "Twitter via",
                                "tip": "Specify which Twitter handle, if any, to set as the \"via\" when sharing with Twitter.",
                                "placeholder": "The Twitter handle to set as the \"via\" when sharing with Twitter"
                            },
                            {
                                "key": "social_googleplus_enabled",
                                "label": "Enable Google+",
                                "type": "boolean"
                            },
                            {
                                "key": "social_pinterest_enabled",
                                "label": "Enable Pinterest",
                                "type": "boolean"
                            },
                            {
                                "key": "social_skin",
                                "label": "Skin",
                                "type": "dropdown",
                                "options": {
                                    "CLASSIC": "Classic",
                                    "FLAT": "Flat",
                                    "BIRMAN": "Birman"
                                }
                            },
                            {
                                "key": "social_layout",
                                "label": "Layout",
                                "type": "dropdown",
                                "options": {
                                    "HORIZONTAL": "Horizontal",
                                    "VERTICAL": "Vertical",
                                    "SINGLE": "Single Button"
                                }
                            },
                            {
                                "key": "social_layout_single_text",
                                "label": "Single button text",
                                "placeholder": "The button text when the \"Single Button\" layout is used"
                            },
                            {
                                "key": "social_counters",
                                "label": "Show Counters",
                                "type": "boolean"
                            }
                        ]
                    }
                ]
            }
        }
    }
}